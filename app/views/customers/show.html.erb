<h1><u>Customer Name: <%= @customer.name %></u></h1>

<h2><u><%= @customer.name %>'s Items:</u></h2>
<ul>
  <% @customer.items.each do |item| %>
    <section id="item-<%= item.id %>">
      <li>Item: <%= item.name %></li>
      <li>Price: $<%= item.price %></li>
      <li>Supermarket: <%= item.supermarket.name %></li>
      <br
    </section>
  <% end %>
</ul>